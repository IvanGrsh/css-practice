<header class="header">
	<div class="">
		{{> logo}}
	</div>


	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>

		{{!-- {{#each list}} --}}
		<div class="inf">
			{{!-- <strong class="inf_name">{{name}}</strong> --}}
			<p class="inf_text">{{description}}</p>
			{{!-- <span class="inf_day">{{day}}</span> --}}
		</div>
		{{!-- {{/each}} --}}

		{{!-- <a href="#" class="info_link">All messages</a> --}}
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form_input-{{id}}" />
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

{{#with updates}}
<div class="updates">
	<h1 class="updates_title">{{title}}</h1>

	{{#each list}}
	<div class="upd">
		<img src="https://picsum.photos/500/500" alt="upd image" class="upd_image">
		<div class="upd_content">
			<strong class="upd_name">{{nickname}}</strong>
			<p class="upd_description">{{description}}</p>
		</div>
	</div>
	{{/each}}

	{{#with show_all}}
	<a href="url" class="info_link">{{text}}</a>
	{{/with}}
</div>
{{/with}}

