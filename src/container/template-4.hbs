<header class="header">
	<div class="">
		{{> logo}}
	</div>


	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>
	</nav>
</header>

{{#with main}}
<div class="main">
	<img src="{{image}}" alt="main image" class="main_image">
	<div class="main_content">
		<h1 class="main_heading">{{heading}}</h1>
		<p class="main_descriotion">{{descriotion}}</p>
		<div class="main_action">
			<a class="button main_button" href="{{href}}">{{button}}</a>
		</div>
	</div>
</div>
{{/with}}


<main class="featured">
	{{#each featured}}
	{{>cardFeatured data=this}}
	{{/each}}
</main>

<div class="form">
	{{#each actions}}
	{{!-- <div class="form_content"> --}}
		{{>cardActions data=this}}
		{{!-- <div class="action">
			<div class="form_content">
				<h3 class="form_title">{{title}}</h3>
				<p class="form_info">{{info}}</p>
			</div>
			<div class="form_action">
				<a class="button form_button" href="{{href}}">{{button}}</a>
			</div>
		</div> --}}
		{{!-- </div> --}}
	{{/each}}
</div>


<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>